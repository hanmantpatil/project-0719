<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            style="@style/TextAppearance.AppCompat.Title"
            tools:text="Tea Villa Cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>

    <TextView
            tools:text="183/16, 5th Main Road, 4th Block, Jayanagar, Bengaluru"
            android:layout_width="0dp"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            android:id="@+id/address" app:layout_constraintStart_toStartOf="@+id/title"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/address" app:layout_constraintStart_toStartOf="@+id/address"
    />

    <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="21-07-2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/address" android:layout_marginTop="8dp"/>

    <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="21072019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact" app:layout_constraintEnd_toEndOf="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/date" android:layout_marginTop="8dp"/>

    <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Giga Bite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pack" app:layout_constraintStart_toStartOf="@+id/event"
            app:layout_constraintTop_toBottomOf="@+id/event" android:layout_marginTop="8dp"
    />

    <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="Status: Pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/status" app:layout_constraintStart_toStartOf="@+id/pack"
            app:layout_constraintTop_toBottomOf="@+id/pack" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/view"/>

    <View android:alpha="0.3" android:background="#000000" android:layout_width="match_parent"
          android:layout_height="1dp" app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
          android:id="@+id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>